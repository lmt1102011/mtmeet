{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "friends": {
          "$friendUid": {
            ".read": "auth != null && (auth.uid === $uid || auth.uid === $friendUid)",
            ".write": "auth != null && auth.uid === $uid"
          }
        }
      }
    },
    "friendRequests": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },
    "invites": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },
    "rooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "participants": {
          "$uid": {
            ".write": "auth != null && auth.uid === $uid",
            ".read": "auth != null"
          }
        },
        "signals": {
          "$signalId": {
            ".write": "auth != null",
            ".read": "auth != null"
          }
        }
      }
    }
  }
}
