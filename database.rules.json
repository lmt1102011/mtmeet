{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "isAdmin": {
          ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true && auth.uid !== $uid"
        }
      }
    },
    "usernameIndex": {
      ".read": true,
      ".write": "auth != null"
    },
    "friendRequests": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },
    "invites": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },
    "rooms": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "participants": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "signals": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$reportId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['reportedUid', 'reportedName', 'reporterUid', 'reporterName', 'timestamp'])"
      }
    }
  }
}
